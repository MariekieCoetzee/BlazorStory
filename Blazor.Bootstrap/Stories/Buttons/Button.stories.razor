@attribute [Stories("Buttons")]

<Stories TComponent="Button">

    <ArgType For="_ => _!.Color" Control="ControlType.Color" />

    <Story Name="Default">

        <Arguments>
            <Arg For="_ => _!.Text" Value='"Default"' />
            <Arg For="_ => _!.Disabled" Value="false" />
        </Arguments>

        <Template>
            <Button @attributes="context.Args">
            </Button>
        </Template>
    </Story>
    <Story Name="Inactive">

        <Arguments>
            <Arg For="_ => _!.Disabled" Value="true" />
              <Arg For="_ => _!.Text" Value='"Default"' />
        </Arguments>

        <Template>
            <Button @attributes="context.Args">
            </Button>
        </Template>
    </Story>

</Stories>