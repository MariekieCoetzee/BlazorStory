@attribute [Stories("Pages/GridView")]

<Stories TComponent="GridView">
    <ArgType For="_ => _!.AlignDate"
             Control="ControlType.Select" />
    <ArgType For="_ => _!.AlignTempC"
             Control="ControlType.Select" />
    <ArgType For="_ => _!.AlignTempF"
             Control="ControlType.Select" />
    <ArgType For="_ => _!.AlignSummary"
             Control="ControlType.Select" />
    <ArgType For="_ => _!.AlignDate"
             Control="ControlType.Select" />
    <ArgType For="_ => _!.TableTheme"
             Control="ControlType.Select" />
    <ArgType For="_ => _!.Color" 
             Control="ControlType.Color" />
    
    <Story Name="Default">
        <Arguments>
            <Arg For="_=> _!.AlignDate" Value="GridView.AlignEnum.Left"></Arg>
        </Arguments>
        <Template>
            <GridView AlignDate="GridView.AlignEnum.Left" 
                      AlignSummary="GridView.AlignEnum.Left"
                      AlignTempC="GridView.AlignEnum.Left"
                      AlignTempF="GridView.AlignEnum.Right"
                      Color="#d1d0d2" 
                      EnableSearch="false"
                      DateFormat="yyyy-MM-dd"
                      TableTheme="GridView.TableThemeEnum.Default"
                      SortDate="false"
                      SortSummary="false"
                      SortTempC="false"
                      SortTempF="false"
                      @attributes="context.Args">
            </GridView>
        </Template>
    </Story>

</Stories>